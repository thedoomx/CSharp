<Window x:Class="WpfApplication2.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="OrdersWindow" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="ordersGrid" ItemsSource="{Binding Orders}" IsReadOnly="True"
                  MouseDoubleClick="ordersGrid_MouseDoubleClick"></DataGrid>
    </Grid>
</Window>
